<Application x:Class="Wpf.GridView.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Wpf.GridView"
             Startup="AppStartup">
    <Application.Resources>
         
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Styles.xaml"/>

                <!-- Last resources - is default resource (language) -->
                <ResourceDictionary Source="Resources\StringResources.en-US.xaml" />
                <ResourceDictionary Source="Resources\StringResources.ru-RU.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
